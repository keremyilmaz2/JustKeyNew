@model IEnumerable<JustKeyNew.Models.ViewModels.ExtraVM>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Extra List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6"></div>
            <div class="col-6 text-end">
                <a asp-controller="Extra" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Extra</a>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Extra Name</th>
                    <th>Categories</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.ExtraName))
                {
                    <tr>
                        <td style="text-align: left; vertical-align: middle;">@obj.ExtraName</td>
                        <td>
                            @foreach (var category in obj.Categories)
                            {
                                <span>@category</span>
                                <br />
                            }
                        </td>
                        <td style="text-align: center; vertical-align: middle;">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Extra" asp-action="Edit" asp-route-id="@obj.ExtraName" class="btn btn-warning mx-2">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
