@model IEnumerable<Category>

<style>
    .custom-img {
        width: 100%; 
        height: 200px; 
        object-fit: cover; 
    }
</style>

<div class="row pb-3">
    @foreach (var category in Model)
    {
        <div class="col-lg-4 col-sm-6">
            <div class="row pb-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @if (category.CategoryImageUrl != null)
                        {
                            <img src="@category.CategoryImageUrl" class="card-image-top rounded custom-img" />
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600.png" class="card-image-top rounded custom-img" />
                        }

                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@category.Name</p>

                            </div>

                        </div>
                        <div>
                            <a asp-action="CategoriesToProducts" asp-route-categoryId="@category.Id" class="btn btn-primary bg-gradient border-0 form-control">
                                Products
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
