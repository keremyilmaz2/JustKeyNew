@model JustKeyNew.Models.ViewModels.ProductVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Content</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Product.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Title" class="form-control border-0 shadow" />
                            <label asp-for="Product.Title" class="ms-2"></label>

                            <span asp-validation-for="Product.Title" class="text-danger"></span>
                        </div>

                        @foreach (var material in Model.CategoryMaterials)
                        {
                            if (material.Value == Model.Product.CategoryId.ToString())
                            {
                                <div class="form-floating py-2 col-12">
                                    <input asp-for="@material.Text" value="0" class="form-control border-0 shadow" />
                                    <label  class="ms-2">@material.Text</label>
                                    <span asp-validation-for="@material.Text" class="text-danger"></span>
                                </div>

                            }
                        }
                        

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                                
                            </div>
                            <div class="col-6 col-md-3">

                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back To Page
                                </a>
                            </div>
                        </div>


                    </div>
                </div>
                
            </div>


        </form>
    </div>
</div>


@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate ai mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss markdown',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',
        });
    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}