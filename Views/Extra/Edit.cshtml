@model JustKeyNew.Models.ViewModels.CategoryExtraVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Material</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Edit" class="row">
            <div class="border p-3">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryExtra.ExtraName" class="form-control border-0 shadow" />
                    <label asp-for="CategoryExtra.ExtraName" class="ms-2"></label>
                    <span asp-validation-for="CategoryExtra.ExtraName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryExtra.Price" class="form-control border-0 shadow" />
                    <label asp-for="CategoryExtra.Price" class="ms-2"></label>
                    <span asp-validation-for="CategoryExtra.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label>Select Categories:</label><br /><br />
                    @for (var i = 0; i < Model.CategoryList.Count(); i++)
                    {
                        var category = Model.CategoryList.ElementAt(i);
                        <div class="form-check">
                            <input type="checkbox" asp-for="@Model.IsCategorySelected[i]" class="form-check-input" checked="@(Model.IsCategorySelected[i])" />
                            <label class="form-check-label">@category.Text</label>
                            <input type="hidden" asp-for="@category.Value" /> <!-- Include category ID as hidden input for binding -->
                        </div>
                    }
                    <span asp-validation-for="@Model.IsCategorySelected" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Save</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Extra" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
