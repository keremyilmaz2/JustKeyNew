@{
    var status = Context.Request.Query["status"];
    var pending = "text-primary";
    var cash = "text-primary";
    var completed = "text-primary";
    var creditCart = "text-primary";
    var all = "text-primary";

    switch (status)
    {
        case "pending" :
            pending = "active text-white bg-primary";
            break;
        case "cash":
            cash = "active text-white bg-primary";
            break;
        case "completed":
            completed = "active text-white bg-primary";
            break;
        case "creditCart":
            creditCart = "active text-white bg-primary";
            break;

        default: 
            all = "active text-white bg-primary";
            break;

    }
}

<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 ">Order List</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        @* <div class="col-6 text-left text-center">
            <a asp-controller="Order" asp-action="EndOfDay" class="btn btn-success">Create New Order</a>
        </div> *@
        <div class="d-flex justify-content-between pb-5 pt-2">
            <a asp-controller="Order" asp-action="EndOfDay" class="btn btn-success">EndOfDay</a>
            <span></span>
            <ul class="list-group list-group-horizontal-sm">
                <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="cash">
                <li class="list-group-item @cash">Cash</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="pending">
                <li class="list-group-item @pending">Payment Pending</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="completed">
                <li class="list-group-item @completed">Completed</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="creditCart">
                <li class="list-group-item @creditCart">CreditCart</li>
                </a>
                <a style="text-decoration:none;" asp-controller="Order" asp-action="Index" asp-route-status="all">
                <li class="list-group-item @all">All</li>
                </a>
            </ul>
        </div>

        <table id="tblData" class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                        Table No
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Delivery
                    </th>
                    <th>
                        Total 
                    </th>
                    <th></th>


                </tr>
            </thead>

        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/order.js"></script>
}
