@model JustKeyNew.Models.ViewModels.CategoryMaterialVM

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Material</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post"  class="row">
            <div class="border p-3">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryMaterial.MaterialName" class="form-control border-0 shadow" />
                    <label asp-for="CategoryMaterial.MaterialName" class="ms-2"></label>

                    <span asp-validation-for="CategoryMaterial.MaterialName" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.CategoryMaterial.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>
                            --Select Category--
                        </option>
                    </select>
                    <label asp-for="CategoryMaterial.CategoryId" class="ms-2"></label>
                    <span asp-validation-for="CategoryMaterial.CategoryId" class="text-danger"></span>
                </div>
                
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Material" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back To List
                        </a>
                    </div>
                </div>


            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}